<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ad2228"
    tools:context=".MyInfos2"    >


        <Button
            android:id="@+id/addInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#bd4e53"
            android:text="Add more info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.573"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.821"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="168dp"
            android:layout_height="205dp"
            android:layout_marginStart="120dp"

            android:layout_marginTop="284dp"
            android:src="@drawable/red_white_circular_health_club_logo__1_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Peso"
            android:layout_width="207dp"
            android:layout_height="18dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="29dp"
            android:textColor="#fcacac"
            app:layout_constraintTop_toBottomOf="@+id/Altura"
            app:layout_constraintStart_toEndOf="@+id/textoPeso" />

        <TextView
            android:id="@+id/Altura"
            android:layout_width="207dp"
            android:layout_height="18dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:textColor="#fcacac"
            app:layout_constraintStart_toEndOf="@+id/textoAltura"
            app:layout_constraintTop_toBottomOf="@+id/Email" />

        <TextView
            android:id="@+id/username"
            android:layout_width="255dp"
            android:layout_height="18dp"
            android:layout_marginStart="12dp"
            android:text=""
            android:textColor="#fcacac"
            app:layout_constraintStart_toEndOf="@+id/textoUsername"
            tools:layout_editor_absoluteY="312dp" />

        <TextView
            android:id="@+id/Idade"
            android:layout_width="255dp"
            android:layout_height="23dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="29dp"
            android:textColor="#fcacac"
            app:layout_constraintStart_toEndOf="@+id/textoIdade"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/textoUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:layout_marginTop="230dp"
            android:textColor="#fcacac"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="312dp" />

        <TextView
            android:id="@+id/textoIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade:"
            android:layout_marginTop="29dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="312dp"
            app:layout_constraintTop_toBottomOf="@+id/textoUsername"
            android:textColor="#fcacac"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textoMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="#fcacac"
            android:textStyle="bold"
            android:layout_marginTop="29dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="312dp"
            app:layout_constraintTop_toBottomOf="@+id/textoIdade"/>

        <TextView
            android:id="@+id/Email"
            android:layout_width="255dp"
            android:layout_height="18dp"
            android:textColor="#fcacac"
            app:layout_constraintStart_toEndOf="@+id/textoMail"
            app:layout_constraintTop_toBottomOf="@+id/Idade"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"
            tools:layout_editor_absoluteY="402dp" />

        <TextView
            android:id="@+id/textoAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altura:"
            android:textColor="#fcacac"
            android:textStyle="bold"
            android:layout_marginTop="29dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="312dp"
            app:layout_constraintTop_toBottomOf="@+id/textoMail"
            />

        <TextView
            android:id="@+id/textoPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso:"
            android:textColor="#fcacac"
            android:textStyle="bold"
            android:layout_marginTop="29dp"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="312dp"
            app:layout_constraintTop_toBottomOf="@+id/textoAltura"/>

</androidx.constraintlayout.widget.ConstraintLayout>